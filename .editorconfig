# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 100

# Python specific settings
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black formatter default
# Additional Python-specific rules
# See PEP8 and Black formatting standards

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Trailing whitespace is significant in Markdown

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Config files
[*.{ini,toml,cfg}]
indent_style = space
indent_size = 4

# Ruby files (for Rails console scripts)
[*.rb]
indent_style = space
indent_size = 2

# Documentation files
[*.rst]
indent_style = space
indent_size = 4
