# Example configuration for OpenProject import scripts
# Default values for the project - customize in .env.local

# OpenProject script configuration
J2O_OPENPROJECT_SERVER=localhost
J2O_OPENPROJECT_CONTAINER=openproject-web-1
J2O_OPENPROJECT_SCRIPT_PATH=/tmp/openproject-import
J2O_OPENPROJECT_RAILS_PATH=/app

# Jira API Configuration (for migration scripts)
J2O_JIRA_URL=https://your-jira-instance.company.com
J2O_JIRA_USERNAME=your_username
J2O_JIRA_API_TOKEN=your_api_token
# ScriptRunner integration (optional)
J2O_JIRA_SCRIPTRUNNER_ENABLED=true
J2O_JIRA_SCRIPTRUNNER_CUSTOM_FIELD_OPTIONS_ENDPOINT=/rest/scriptrunner/latest/custom/getAllCustomFieldsWithOptions

# OpenProject API Configuration
J2O_OPENPROJECT_URL=https://localhost/
J2O_OPENPROJECT_API_KEY=your_api_key
J2O_OPENPROJECT_TMUX_SESSION_NAME=rails_console
J2O_OPENPROJECT_RATE_LIMIT=10

# Migration Configuration
J2O_LOG_LEVEL=INFO
J2O_BATCH_SIZE=100
J2O_RATE_LIMIT_REQUESTS=100
J2O_RATE_LIMIT_PERIOD=60

# SSL Configuration
# Set to false for development with self-signed certs
J2O_SSL_VERIFY=true
