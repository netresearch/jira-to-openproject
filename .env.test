# Test environment configuration

# Suppress logs during tests by default
# Set to 1 to show logs during test execution
J2O_TEST_SHOW_LOGS=0

# Use memory-based storage for test data
J2O_DATA_DIR=:memory:

# Set to true to use mock APIs instead of real connections during tests
J2O_USE_MOCK_APIS=true

# Log level for tests
J2O_LOG_LEVEL=WARNING

# OpenProject script configuration
J2O_OPENPROJECT_SERVER=openproject.local
J2O_OPENPROJECT_CONTAINER=openproject-web-1
J2O_OPENPROJECT_SCRIPT_PATH=/tmp/openproject-import
J2O_OPENPROJECT_RAILS_PATH=/app
J2O_OPENPROJECT_USER=root
J2O_OPENPROJECT_KEY_FILE=~/.ssh/id_rsa

# Jira API Configuration
J2O_JIRA_URL=https://jira.local
J2O_JIRA_USERNAME=testuser
J2O_JIRA_API_TOKEN=test_token

# OpenProject API Configuration
J2O_OPENPROJECT_URL=https://openproject.local
J2O_OPENPROJECT_API_KEY=test_api_key
J2O_OPENPROJECT_TMUX_SESSION_NAME=rails_console
J2O_OPENPROJECT_RATE_LIMIT=10

# Migration Configuration
J2O_LOG_LEVEL=DEBUG
J2O_BATCH_SIZE=10
J2O_RATE_LIMIT_REQUESTS=10
J2O_RATE_LIMIT_PERIOD=60

# SSL Configuration
J2O_SSL_VERIFY=false
